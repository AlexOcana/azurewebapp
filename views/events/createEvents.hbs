<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>New events</h1>
            <hr>
            <form action="/events/create" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="eventName" class="form-label">Name</label>
                            <input type="text" class="form-control" id="eventName" name="eventName">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="platform" class="form-label">Platform</label>
                            <input type="text" class="form-control" id="platform" name="platform">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <input type="text" class="form-control" id="description" name="description">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="eventImg" class="form-label">Upload an image</label>
                            <input type="file" placeholder="form-control" id="eventImg" name="eventImg">
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="eventDate" class="form-label">Date</label>
                    <input type="datetime-local" id="eventDate" name="eventDate">
                </div>


                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Create</button>
                </div>
            </form>
        </div>
    </div>


</div>